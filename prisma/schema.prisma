datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  lastLogin  DateTime @default(now())
  totalSpent Float    @default(0)
  isChurned  Boolean  @default(false)
}
